<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.TodayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 顶部主要天气信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:text="广州" />

            <TextView
                android:id="@+id/tv_weather_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="晴" />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/white"
                android:textSize="96sp"
                android:textStyle="bold"
                tools:text="25°" />

            <TextView
                android:id="@+id/tv_temp_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="最高: 25° 最低: 18°" />

        </LinearLayout>

        <!-- 白天天气卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_forecast_card"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 卡片标题 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- TODO: 在这里放一个太阳图标 ImageView -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白天"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 天气详情行 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气"
                    android:textColor="#B3FFFFFF"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tv_day_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="晴"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <!-- 温度详情行 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温度"
                    android:textColor="#B3FFFFFF"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tv_day_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="25°"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <!-- 风力详情行 (已修正) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力"
                    android:textColor="#B3FFFFFF"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tv_day_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="南风 1-2级"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>

        <!-- 夜间天气卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_forecast_card"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 卡片标题 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- TODO: 在这里放一个月亮图标 ImageView -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 天气详情行 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气"
                    android:textColor="#B3FFFFFF"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tv_night_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="晴"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <!-- 温度详情行 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温度"
                    android:textColor="#B3FFFFFF"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tv_night_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="18°"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <!-- 风力详情行 (已修正) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力"
                    android:textColor="#B3FFFFFF"
                    android:textSize="15sp"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tv_night_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="南风 1-2级"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
